<ui:FluentWindow x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        Background="White"
        ResizeMode="NoResize"
        Closed="LauncherClosed"
        WindowBackdropType="Tabbed"
        ExtendsContentIntoTitleBar="True"
        mc:Ignorable="d"
        Title="Exit Launcher" Height="710" Width="1160">

    <Grid>
        <Frame x:Name="MainFrame" Navigated="MainFrame_Navigated" Background="#FF003B71"/>

        <!-- Title bar with white button icons -->
        <ui:TitleBar 
            x:Name="TitleBar" 
            Title="Exit Launcher" 
            ShowMaximize="False" 
            ButtonsForeground="White" 
            Height="48" 
            Margin="28,0,0,0" 
            Background="{x:Null}" 
            ApplicationTheme="Dark" Foreground="White" />

        <ui:Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="35" Margin="10,6,0,0" Source="/Exit Logo Blue.png" />
    </Grid>
</ui:FluentWindow>
