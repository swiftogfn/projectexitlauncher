<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="WpfApp5.Pages.Home"
      mc:Ignorable="d" 
      Loaded="HomeLoaded"
      Title="Home" Height="710" Width="1090">

    <Grid x:Name="SettingsGrid" Margin="0,20,20,20" HorizontalAlignment="Right" Width="1050">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <!-- Banner -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons Row -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Banner Header -->
        <!-- Banner Header -->
        <Border CornerRadius="8,8,8,8" Padding="20" Grid.Row="0" Margin="0,24,0,0" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush  Stretch="UniformToFill" ImageSource="/Pages/Fortnite-Stark-Industries-Location.jpg"/>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="100,56,0,0">
                    <TextBlock x:Name="GreetingTextBlock" Text="Good afternoon, " FontSize="28" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="Relive the best Chapter 2 Season 4 Fortnite experience with Exit." Foreground="White" Background="{x:Null}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Banner Header -->
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="530,9,0,360" Grid.Row="2" Background="#FF003B71">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="0,9,530,360" Grid.Row="2" Background="#FF003B71">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Buttons Row -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20" Grid.Row="1"/>

        <!-- Main Launch Area -->
        <Border x:Name="LaunchName" CornerRadius="3,3,3,3" Padding="20" Margin="0,80,0,280" Grid.Row="2" HorizontalAlignment="Right" Width="1050" Background="#FF003B71">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Button Content="Donate" Padding="10,5" Width="85" Click="Donate_Click" Margin="955,24,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <Button Content="Join" Padding="10,5" Width="50" Click="Discord_Click" Margin="460,24,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <TextBlock x:Name="LaunchText" Text="Launch Season 4" FontSize="16" FontWeight="Bold" Foreground="White" Margin="67,95,0,310" HorizontalAlignment="Left" Grid.Row="2"/>
        <ui:SymbolIcon x:Name="ErrorloginIcon" Foreground="White" FontSize="30" Symbol="Play20" Margin="0,80,983,281" Grid.Row="2"/>
        <ui:FontIcon x:Name="Launched"
             Foreground="White"
             FontSize="30"
             Glyph="&#xE10A;"
             FontFamily="Segoe MDL2 Assets"
             Margin="0,80,983,281"
             Grid.Row="2"
             Visibility="Hidden"/>

        <Image Width="30" Height="30" Margin="18,24,1002,376" Grid.Row="2" Source="/Pages/discord_icon_white.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/Pages/discord_icon_white.png" />
            </Image.OpacityMask>
        </Image>
        <TextBlock x:Name="LaunchFN" Text="Launch Fortnite Chapter 2 Season 4 powered by Exit." Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="67,115,0,247" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <TextBlock Text="Discord" FontSize="16" FontWeight="Bold" Foreground="White" Margin="67,19,0,385" HorizontalAlignment="Left" Grid.Row="2"/>
        <TextBlock Text="Join the Discord for more news!" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="67,39,0,371" Grid.Row="2"/>
        <Button Width="1050" Height="70"
        Margin="0,80,0,0"
        Click="LaunchSeason_Click"
        Grid.Row="2"
        VerticalAlignment="Top"
        HorizontalAlignment="Center"
        Cursor="Hand"
        Background="Transparent">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="BackgroundBorder"
                    Background="Transparent"
                    CornerRadius="3">
                        <ContentPresenter x:Name="contentPresenter"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  TextElement.FontWeight="Normal"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" Value="#10FFFFFF"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="SemiBold"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Normal"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text=" "
               Foreground="Transparent"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               TextAlignment="Center"
               FontSize="1"/>
        </Button>
        <TextBlock Text="Servers Running Slow?" FontSize="16" FontWeight="Bold" Foreground="White" Margin="595,20,0,384" HorizontalAlignment="Left" Grid.Row="2"/>
        <TextBlock Text="Help fund Exit's expenses by donating!" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="595,40,0,370" Grid.Row="2"/>
        <Image Width="30" Height="30" Margin="548,24,472,376" Grid.Row="2" Source="/Pages/icons8-donate-530.png"/>
        <ui:ImageIcon HorizontalAlignment="Center" Height="100" Margin="0,145,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <Border BorderThickness="1" Margin="18,90,946,26" Background="White" Opacity="0.13" CornerRadius="8,8,8,8"/>
        <Border BorderThickness="1" Margin="18,89,946,26" CornerRadius="3,3,3,3" ClipToBounds="True" Background="Transparent">
            <Image x:Name="SkinImage" Stretch="UniformToFill" Margin="0,0,3,0" />

        </Border>


        <!-- ====== Last Used Skins Display Panel ====== -->
        <StackPanel Grid.Row="2" Margin="20,200,0,50" HorizontalAlignment="Left" Width="350" Visibility="Hidden">
            <TextBlock x:Name="LastSkinLabel" Text="Last Used Skins:" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" Visibility="Hidden"/>
            <ItemsControl x:Name="SkinsPanel" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Width="70" Height="90">
                            <Border Width="70" Height="70" CornerRadius="35" BorderBrush="White" BorderThickness="1" ClipToBounds="True">
                                <Image Source="{Binding SkinImageUrl}" Stretch="UniformToFill" />
                            </Border>
                            <TextBlock Text="{Binding SkinName}" Foreground="White" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <CheckBox x:Name="EditOnReleaseCheckbox" Content="CheckBox" Margin="191,0,0,0" Grid.Row="2" Checked="EditOnReleaseCheckbox_Checked" Visibility="Hidden"/>
        <TextBlock x:Name="UsernameLabel" Text="" FontSize="28" Foreground="White" FontWeight="Bold" Margin="341,99,55,64"/>

    </Grid>
</Page>
