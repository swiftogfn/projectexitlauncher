<Page x:Class="WpfApp5.Pages.Library"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.Pages"
      mc:Ignorable="d"
          Loaded="Library_Loaded"
      Title="Library" Height="710" Width="1090">


    <Grid x:Name="LibraryGrid">
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="80,268,80,355" Opacity="0.75" Background="#FF003B71">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="80,154,80,484" Opacity="0.75" Background="#FF003B71">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <ui:Button x:Name="Build1" Content="Set Path" Margin="-295,678,0,0" VerticalAlignment="Stretch" Width="225" Click="Build1_Click"/>


        <Grid x:Name="LoadingGrid" Visibility="Hidden">
            <Frame x:Name="LoadingFrameLogin" Background="Black" Opacity="0.5"/>
            <ui:LoadingScreen Background="Transparent" x:Name="LoadingLoginPage" Margin="525,294,425,294"/>
        </Grid>

        <Grid x:Name="ErrorGrid" Visibility="Hidden">
            <ui:Button MouseOverBorderBrush="Blue" MouseOverBackground="IndianRed" x:Name="ErrorButton" Content="You can only play 14.40!" Background="IndianRed" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="White" Width="474" Height="33" Margin="0,658,0,0" IsHitTestVisible="False"/>
            <ui:SymbolIcon x:Name="ErrorloginIcon" Foreground="White" FontSize="30" Symbol="ErrorCircle16" Margin="308,658,740,18"/>
        </Grid>
        <Label x:Name="PathLabel" Content="Path must contain FortniteGame and Engine folders!" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,190,0,0" />
        <TextBlock Text="Downloads" FontSize="28" Foreground="White" FontWeight="Bold" Margin="80,78,100,595"/>
        <TextBlock Text="Game Path" FontSize="16" FontWeight="Bold" Foreground="White" Margin="100,169,0,520" HorizontalAlignment="Left"/>
        <Button Content="Change Install Path" Padding="10,5" Width="150" Click="Build1_Click" Margin="850,175,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="Exit Build (14.60-CL-14786821)" FontSize="16" FontWeight="Bold" Foreground="White" Margin="80,236,0,453" HorizontalAlignment="Left"/>
        <Button Name="DownloadButton" Content="Start Download" Padding="10,5" Width="123" Click="Discord_Click" Margin="87,278,0,0" VerticalAlignment="Top"/>

        <ProgressBar x:Name="ProgressBar" 
             Width="780" 
             Height="4" 
             Margin="220,290,0,0" 
             VerticalAlignment="Top" 
             HorizontalAlignment="Left" 
             Minimum="0" 
             Maximum="100" 
             Value="0"
             Foreground="#67AAF6"
             Background="#333" />

        <Label x:Name="PathLabel_Copy" Content="0%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,320,0,0" />
        <Label x:Name="PathLabel_Copy1" Content="0 GB / 28.56 GB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,320,0,0" />
        <Label x:Name="PathLabel_Copy2" Content="0 MB/s" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="252,320,0,0" />



    </Grid>
</Page>
