<Page x:Class="WpfApp5.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.Pages"
      mc:Ignorable="d"
      Loaded="SettingsLoaded"
      Title="Settings" Height="710" Width="1090">

    <Grid x:Name="SettingsGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <!-- UI Elements -->
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="60,97,60,537" Background="#FF003B71"/>

        <Border CornerRadius="3,3,3,3" Padding="20" Margin="60,176,60,459" Background="#FF003B71"/>

        <Border CornerRadius="3,3,3,3" Padding="20" Margin="60,254,60,380" Background="#FF003B71"/>

        <TextBlock Text="Appearance and behavior" FontSize="16" FontWeight="Bold" Foreground="White" Margin="60,75,0,614" HorizontalAlignment="Left"/>
        <TextBlock Text="Sound" FontSize="16" FontWeight="Bold" Foreground="White" Margin="84,118,0,566" HorizontalAlignment="Left"/>
        <TextBlock Text="Turn on sound effects while using the launcher." Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="84,138,0,552"/>
        <ui:ToggleSwitch x:Name="AutoLoginSwitch" Content="" Margin="970,128,0,0" VerticalAlignment="Top" Unchecked="ToggleSwitch_Unchecked" Checked="ToggleSwitch_Checked" IsChecked="False" IsEnabled="False"/>
        <TextBlock Text="Off" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="931,128,0,562"/>

        <TextBlock Text="Bubble Builds" FontSize="16" FontWeight="Bold" Foreground="White" Margin="84,195,0,489" HorizontalAlignment="Left"/>
        <TextBlock Text="Enabling this option adds Bubble Wrap Build for you in-game!" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="84,215,0,475"/>
        <ui:ToggleSwitch x:Name="AutoLoginSwitch_Copy" Content="" Margin="970,205,0,0" VerticalAlignment="Top" Unchecked="ToggleSwitch_Unchecked" Checked="ToggleSwitch_Checked" IsChecked="False" IsEnabled="False"/>
        <TextBlock Text="Off" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="931,205,0,485"/>

        <TextBlock Text="World Cup Lobby" FontSize="16" FontWeight="Bold" Foreground="White" Margin="84,272,0,412" HorizontalAlignment="Left"/>
        <TextBlock Text="Turning on this option gives you the World Cup Lobby Background in-game!" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="84,292,0,398"/>
        <ui:ToggleSwitch x:Name="AutoLoginSwitch_Copy1" Content="" Margin="970,282,0,0" VerticalAlignment="Top" Unchecked="ToggleSwitch_Unchecked" Checked="ToggleSwitch_Checked" IsChecked="False" IsEnabled="False"/>
        <TextBlock Text="Off" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="931,282,0,408"/>

        <TextBlock Text="About" FontSize="16" FontWeight="Bold" Foreground="White" Margin="60,355,0,334" HorizontalAlignment="Left"/>

        <Border CornerRadius="3,3,3,3" Padding="20" Margin="60,379,60,256" Background="#FF003B71"/>

        <Image Margin="72,398,979,275" Source="/Pages/Exit Logo Blue.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/Pages/Exit Logo Blue.png"/>
            </Image.OpacityMask>
        </Image>

        <TextBlock Text="About Exit Launcher" FontSize="16" FontWeight="Bold" Foreground="White" Margin="121,399,0,285" HorizontalAlignment="Left"/>

        <Border Height="4" Margin="60,437,60,0" OpacityMask="#FF003B71" Background="#FF002C73"/>

        <Border x:Name="Dropping" CornerRadius="3,3,3,3" Padding="30" Margin="60,456,60,0" Height="74" VerticalAlignment="Top" Visibility="Hidden" Background="#FF003B71">
            <TextBlock Text="Launcher made by Arx."
                       Foreground="White" FontSize="14" Margin="0,0,0,-16"/>
        </Border>
        <!-- Dropdown container -->
        <Grid x:Name="AboutDropdownContainer" Height="0" VerticalAlignment="Top" Margin="60,530,60,0" ClipToBounds="True" Opacity="1">
            <StackPanel Margin="0,0,0,-5">
                <Border Height="4" Background="#FF002C73"/>

                <!-- FINAL updated section with clickable Hyperlink -->
                <Border CornerRadius="3,3,3,3" Padding="20" Height="74" Background="#FF003B71">
                    <TextBlock FontSize="14" Margin="0,10,0,-14" Width="908" Foreground="White">
    Project Exit Discord:
    <Hyperlink NavigateUri="https://discord.gg/EAz5NSF3U6"
               Foreground="#66B2FF"
               TextDecorations="Underline"
               RequestNavigate="Hyperlink_RequestNavigate">
        Discord
    </Hyperlink>
                    </TextBlock>

                </Border>
            </StackPanel>
        </Grid>
        <Grid x:Name="ss" Height="0" VerticalAlignment="Top" Margin="60,454,60,0" ClipToBounds="True" Opacity="1">
            <StackPanel Margin="0,0,0,-5">
                <Border Height="4" Background="#FF002C73"/>

                <!-- FINAL updated section with clickable Hyperlink -->
                <Border CornerRadius="3,3,3,3" Padding="20" Height="74" Background="#FF003B71">
                    <TextBlock FontSize="14" Margin="0,10,0,-14" Width="908" Foreground="White">

                    </TextBlock>

                </Border>
            </StackPanel>
        </Grid>
        <!-- Toggle for dropdown -->
        <ToggleButton x:Name="AboutToggleButton"
                      Width="35" Height="36"
                      Margin="983,398,0,0"
                      VerticalAlignment="Top"
                      Background="Transparent"
                      BorderThickness="0"
                      Cursor="Hand"
                      Checked="AboutToggleButton_Checked_1"
                      Unchecked="AboutToggleButton_Checked_1">
            <Grid RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <RotateTransform x:Name="ArrowRotate" Angle="0"/>
                </Grid.RenderTransform>
                <Path Data="M 3 8 L 12 17 L 21 8"
                      Stroke="White"
                      StrokeThickness="2"
                      StrokeLineJoin="Round"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Stretch="Uniform"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            </Grid>
        </ToggleButton>
        <TextBlock Text="1.0.7" Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="121,419,0,271"/>

        <Button Width="970" Height="75"
                Click="LaunchSeason_Click"
                Cursor="Hand"
                Background="White" Margin="0,379,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.054"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.499"/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="BackgroundBorder"
                            Background="Transparent"
                            CornerRadius="3">
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextElement.FontWeight="Normal"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" Value="#10FFFFFF"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="SemiBold"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Normal"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text=" " Foreground="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center" FontSize="1"/>
        </Button>

        <ui:Button Content="Logout" Margin="968,650,0,0" VerticalAlignment="Top" Click="Button_Click">
            <ui:Button.Background>
                <ImageBrush ImageSource="/Pages/Red_Color.jpg" />
            </ui:Button.Background>
        </ui:Button>
    </Grid>
</Page>
