<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="WpfApp5.Pages.Exit_"
      mc:Ignorable="d" 
    Loaded="ExitLoaded"
      Title="Home" Height="710" Width="1090">

    <Grid x:Name="SettingsGrid" Margin="0,20,20,20" HorizontalAlignment="Right" Width="1050">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <!-- Banner -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons Row -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Banner Header -->
        <!-- Banner Header -->
        <Border CornerRadius="8,8,8,8" Padding="20" Grid.Row="0" Margin="0,24,0,0" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush  Stretch="UniformToFill" ImageSource="/Pages/capter season5 .png"/>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="100,56,0,0">
                    <TextBlock Text="Welcome to Exit +, " FontSize="28" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="Relive the best Chapter 2 Season 5 Fortnite experience with Exit +." Foreground="White" Background="{x:Null}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Banner Header -->

        <!-- Buttons Row -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20" Grid.Row="1"/>

        <!-- Main Launch Area -->
        <Border x:Name="LaunchName" CornerRadius="3,3,3,3" Padding="20" Margin="0,250,0,110" Grid.Row="2" HorizontalAlignment="Center" Width="1050">
            <Border.Background>
                <ImageBrush ImageSource="/Pages/Exit Button Color.png"/>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <TextBlock x:Name="LaunchText" Text="Launch Season 5" FontSize="16" FontWeight="Bold" Foreground="White" Margin="68,265,0,140" HorizontalAlignment="Left" Grid.Row="2"/>
        <ui:SymbolIcon x:Name="ErrorloginIcon" Foreground="White" FontSize="30" Symbol="Play20" Margin="1,250,982,111" Grid.Row="2"/>
        <ui:FontIcon x:Name="Launched"
             Foreground="White"
             FontSize="30"
             Glyph="&#xE10A;"
             FontFamily="Segoe MDL2 Assets"
             Margin="0,80,983,281"
             Grid.Row="2"
             Visibility="Hidden"/>
        <TextBlock x:Name="LaunchFN" Text="Launch Fortnite Chapter 2 Season 5 powered by Exit." Foreground="#AAAAAA" HorizontalAlignment="Left" Margin="68,285,0,77" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button Width="816" Height="70"
        Margin="0,250,0,0"
        Click="LaunchSeason_Click"
        Grid.Row="2"
        VerticalAlignment="Top"
        Cursor="Hand"
        Background="Transparent" HorizontalAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="BackgroundBorder"
                    Background="Transparent"
                    CornerRadius="3">
                        <ContentPresenter x:Name="contentPresenter"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  TextElement.FontWeight="Normal"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" Value="#10FFFFFF"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="SemiBold"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Normal"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text=" "
               Foreground="Transparent"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               TextAlignment="Center"
               FontSize="1"/>
        </Button>
        <ui:ImageIcon HorizontalAlignment="Center" Height="100" Margin="0,145,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <Border BorderThickness="1" Margin="18,90,946,26" Background="White" Opacity="0.13" CornerRadius="8,8,8,8"/>
        <Border BorderThickness="1" Margin="18,89,946,26" CornerRadius="3,3,3,3" ClipToBounds="True" Background="Transparent">
            <Image x:Name="SkinImage" Stretch="UniformToFill" Margin="0,0,3,0" />

        </Border>


        <!-- ====== Last Used Skins Display Panel ====== -->
        <StackPanel Grid.Row="2" Margin="20,200,0,50" HorizontalAlignment="Left" Width="350" Visibility="Hidden">
            <TextBlock x:Name="LastSkinLabel" Text="Last Used Skins:" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" Visibility="Hidden"/>
            <ItemsControl x:Name="SkinsPanel" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Width="70" Height="90">
                            <Border Width="70" Height="70" CornerRadius="35" BorderBrush="White" BorderThickness="1" ClipToBounds="True">
                                <Image Source="{Binding SkinImageUrl}" Stretch="UniformToFill" />
                            </Border>
                            <TextBlock Text="{Binding SkinName}" Foreground="White" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <CheckBox x:Name="EditOnReleaseCheckbox" Content="CheckBox" Margin="191,0,0,0" Grid.Row="2"  Visibility="Hidden"/>
        <TextBlock x:Name="UsernameLabel" Text="" FontSize="28" Foreground="White" FontWeight="Bold" Margin="380,101,-240,62"/>
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="1,133,0,210" Opacity="0.75" Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="/Pages/Exit Button Color.png"/>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border CornerRadius="3,3,3,3" Padding="20" Margin="1,19,0,339" Opacity="0.75" Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="/Pages/Exit Button Color.png"/>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Label x:Name="PathLabel" Content="Path must contain FortniteGame and Engine folders!" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,55,0,0" Grid.Row="2" />
        <TextBlock Text="Game Path" FontSize="16" FontWeight="Bold" Foreground="White" Margin="21,34,0,375" HorizontalAlignment="Left" Grid.Row="2"/>
        <TextBlock Text="Exit Build (15.30-CL-15341163)" FontSize="16" FontWeight="Bold" Foreground="White" Margin="1,101,0,308" HorizontalAlignment="Left" Grid.Row="2"/>
        <Button x:Name="DownloadButton" Content="Start Download" Padding="10,5" Width="123" Click="Discord_Click" Margin="8,143,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <ProgressBar x:Name="ProgressBar" 
            Width="894" 
            Height="4" 
            Margin="145,155,0,0" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Minimum="0" 
            Maximum="100" 
            Value="0"
            Foreground="#67AAF6"
            Background="#333" Grid.Row="2" />
        <Label x:Name="PathLabel_Copy" Content="0%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,185,0,0" Grid.Row="2" />
        <Label x:Name="PathLabel_Copy1" Content="0 GB / 28.56 GB" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="46,185,0,0" Grid.Row="2" />
        <Label x:Name="PathLabel_Copy2" Content="0 MB/s" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="173,185,0,0" Grid.Row="2" />
        <Button Content="Change Install Path" Padding="10,5" Width="150" Click="Build1_Click" Margin="875,40,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <Grid x:Name="LoadingGrid" Visibility="Hidden" Margin="0,0,0,-20" Grid.RowSpan="3">
            <Frame x:Name="LoadingFrameLogin2" Background="Black" Opacity="0.1" Margin="-25,-25,-20,0" Visibility="Hidden"/>
            <ui:LoadingScreen Background="Transparent" x:Name="LoadingLoginPage" Margin="525,294,400,294" Visibility="Hidden"/>
        </Grid>
        <Frame x:Name="LoadingFrameLogin" Background="#80000000" Margin="-25,-25,-20,-20" Visibility="Hidden" Foreground="White" Grid.RowSpan="3"/>
        <Grid x:Name="ErrorGrid" Visibility="Hidden" Margin="0,0,0,-20" Grid.RowSpan="3">
            <ui:Button MouseOverBorderBrush="Blue" MouseOverBackground="IndianRed" x:Name="ErrorButton" Content="You can only play 14.40!" Background="IndianRed" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="White" Width="474" Height="33" Margin="0,636,0,0" IsHitTestVisible="False"/>
            <ui:SymbolIcon x:Name="Errorlogin2" Foreground="White" FontSize="30" Symbol="ErrorCircle16" Margin="308,658,740,18"/>
        </Grid>

    </Grid>
</Page>
